<div id="comment-<%= comment.id %>" class="flex items-start py-2 mt-2">
  <div class="flex flex-col items-center">
    <%= render "comments/comment_voting", comment: comment %>
  </div>

  <div class="flex-1 pl-4">
    <%= render "submissions/posted_by", submission: comment %>
    <div class="tex-gray-800 leading-normal text-sm">
      <%= comment.reply %>
    </div>
    <div class="my-2 flex justify-end">
      <% if author_of?(comment) %>
        <%= link_to edit_submission_comment_path(comment.submission, comment), class: "no-underline mr-2", remote: true do %>
          <%= render_svg "icons/edit", styles: "fill-current text-gray-500 hover:text-gray-600" %> <%# icon-sm %>
        <% end %>

        <%= link_to submission_comment_path(comment.submission, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "no-underline" do %>
          <%= render_svg "icons/delete", styles: "fill-current text-gray-500 hover:text-gray-600" %> <%# icon-sm %>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
