<% content_for :primary_content do %>
  <p id="notice"><%= notice %></p>

  <h1>Submissions</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @submissions.each do |submission| %>
        <tr>
          <td><%= submission.title %></td>
          <td><%= submission.body %></td>
          <td><%= submission.url %></td>
          <td><%= link_to 'Show', submission %></td>
          <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
          <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<% content_for :secondary_content do %>
  <%= link_to 'New Submission', new_submission_path %>
<% end %>

<%#= because the partial is on the views/application folder we can just pass the
name of the file directly without typing in the name of the folder, when we do not pass
the folder name rails goes into views/application folder automatically and grabs the content of the file. %>
<%= render "basic_layout" %>
